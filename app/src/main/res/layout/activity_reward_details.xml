<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RewardDetails">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- Media -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:contentDescription="Image"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/rewards" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="Your Rewards Summary"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="People you have helped"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvPeopleServed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="20"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/black" />


                <!-- Title, secondary and supporting text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Points you have earned"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/tvRewardPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"
                    android:text="5000"
                    android:textAppearance="?attr/textAppearanceBody2"
                     />






            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"

                    android:layout_gravity="center"
                    android:text="1000 points gives you $1"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="#3A3B3C" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRedeem"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"

                    android:text="How Can I Redeem This?" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>





</RelativeLayout>