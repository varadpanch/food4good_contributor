<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakeFoodAvailable">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Enter Available Food"
        ></TextView>

    <EditText
        android:id="@+id/etVeg"
        android:inputType="number"
        android:hint="How many Veg meals?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>

    <EditText
        android:id="@+id/etNonVeg"
        android:inputType="number"
        android:hint="How many Non-Veg meals?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></EditText>

    <Button
        android:id="@+id/btnMakeAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Available"
        ></Button>

</LinearLayout>

